@model MVCAppConsumingBAREAPI.Models.DTOs.ApartmentComplexDTO

<form asp-action="DeleteApartmentComplex">
	<br />
	<div class="container border p-3">
		<h1 class="text-primary">Delete Apartment Complex</h1>
		<hr />

		<input hidden asp-for="Id" />

		<div class="row">

			<div class="col-2">
				<label asp-for="ComplexName" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-4 pb-3">
				<input asp-for="@Model.ComplexName" disabled class="form-control" />
			</div>

			<div class="col-2">
				<label asp-for="Address" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-4 pb-3">
				<input asp-for="@Model.Address" disabled class="form-control" rows="5"></input>
			</div>

			<div class="col-2">
				<label asp-for="Amenities" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-4 pb-3">
				<input asp-for="@Model.Amenities" disabled class="form-control" />
			</div>

			<div class="col-2">
				<label asp-for="Owner" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-4 pb-3">
				<input asp-for="@Model.Owner" disabled class="form-control" rows="5"></input>
			</div>

			<div class="col-2">
				<label asp-for="ImageUrl" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3">
				<input asp-for="@Model.ImageUrl" disabled class="form-control" />
			</div>

			<div class="col-5">
				<input type="submit" value="Delete" class="btn btn-success form-control" />
			</div>

			<div class="col-5 offset-2">
				<a asp-controller="ApartmentComplex" asp-action="Index" class="btn-primary btn form-control">Back to Apartment Complex List</a>
			</div>

		</div>
	</div>
</form>