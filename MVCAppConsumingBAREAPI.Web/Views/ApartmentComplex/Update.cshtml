@model MVCAppConsumingBAREAPI.Models.DTOs.ApartmentComplexUpdateDTO

<form asp-action="UpdateApartmentComplex">
	<br />
	<div class="container border p-3">
		<h1 class="text-primary">Update Apartment Complex</h1>
		<hr />

		<input hidden asp-for="Id" />

		<div class="row">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="col-2">
				<label asp-for="ComplexName" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-4 pb-3">
				<input asp-for="@Model.ComplexName" class="form-control" />
				<span asp-validation-for="ComplexName" class="text-danger"></span>
			</div>

			<div class="col-2">
				<label asp-for="Address" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-4 pb-3">
				<input asp-for="@Model.Address" class="form-control" rows="5"></input>
				<span asp-validation-for="Address" class="text-danger"></span>
			</div>

			<div class="col-2">
				<label asp-for="Amenities" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-4 pb-3">
				<input asp-for="@Model.Amenities" class="form-control" />
				<span asp-validation-for="Amenities" class="text-danger"></span>
			</div>

			<div class="col-2">
				<label asp-for="Owner" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-4 pb-3">
				<input asp-for="@Model.Owner" class="form-control" rows="5"></input>
				<span asp-validation-for="Owner" class="text-danger"></span>
			</div>

			<div class="col-2">
				<label asp-for="ImageUrl" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3">
				<input asp-for="@Model.ImageUrl" class="form-control" />
				<span asp-validation-for="ImageUrl" class="text-danger"></span>
			</div>

			<div class="col-5">
				<input type="submit" value="Update" class="btn btn-success form-control" />
			</div>

			<div class="col-5 offset-2">
				<a asp-controller="ApartmentComplex" asp-action="Index" class="btn-primary btn form-control">Back to Apartment Complex List</a>
			</div>
		</div>
	</div>
</form>

@*all of the asp-validation-for validation are inside the following
script, so we must include it at the end*@

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}